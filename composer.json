{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "title": "Composer Package",
    "name": "scriptdevelop/whatsapp-manager",
    "version": "1.1.2",
    "description": "Laravel package for WhatsApp Business API management",
    "keywords": ["whatsapp", "laravel", "api", "messaging", "whatsappapi", "notifications", "php"],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "orchestra/testbench": "^10.2",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "laravel/reverb": "Allows receiving websocket events from the package via broadcasting"
    },
    "autoload": {
        "psr-4": {
            "ScriptDevelop\\WhatsappManager\\": "src/"
        },
        "files": [
            "src/Helpers/CountryCodes.php",
            "src/Helpers/trans.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "ScriptDevelop\\WhatsappManager\\Providers\\WhatsappServiceProvider"
            ],
            "aliases": {
                "Whatsapp": "ScriptDevelop\\WhatsappManager\\Facades\\Whatsapp"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "ScriptDevelop\\WhatsappManager\\ComposerInstaller::postInstall"
        ],
        "post-update-cmd": [
            "ScriptDevelop\\WhatsappManager\\ComposerInstaller::postUpdate"
        ]
    }
}
